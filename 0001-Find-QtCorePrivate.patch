From 44c74decfa71ae3d174578d2ef71bd32c22783e6 Mon Sep 17 00:00:00 2001
From: Tobias Fella <tobias.fella@kde.org>
Date: Sun, 28 Dec 2025 01:54:51 +0100
Subject: [PATCH] Find QtCorePrivate

---
 CMakeLists.txt                | 2 +-
 cmake/QuotientConfig.cmake.in | 1 +
 2 files changed, 2 insertions(+), 1 deletion(-)

diff --git a/CMakeLists.txt b/CMakeLists.txt
index bc61102a..a9f1ec2a 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -91,7 +91,7 @@ set(${PROJECT_NAME}_INSTALL_INCLUDEDIR
 set(CMAKE_AUTOMOC ON)
 set(CMAKE_AUTORCC ON)
 
-find_package(${Qt} ${QtMinVersion} REQUIRED Core Network Gui Test Sql)
+find_package(${Qt} ${QtMinVersion} REQUIRED Core Network Gui Test Sql CorePrivate)
 get_filename_component(Qt_Prefix "${${Qt}_DIR}/../../../.." ABSOLUTE)
 
 if(${Qt}Core_VERSION VERSION_GREATER_EQUAL 6.10)
diff --git a/cmake/QuotientConfig.cmake.in b/cmake/QuotientConfig.cmake.in
index 6f92d54c..763471e7 100644
--- a/cmake/QuotientConfig.cmake.in
+++ b/cmake/QuotientConfig.cmake.in
@@ -1,6 +1,7 @@
 include(CMakeFindDependencyMacro)
 
 find_dependency(@Qt@Gui)
+find_dependency(@Qt@CorePrivate)
 find_dependency(@Qt@Network)
 find_dependency(@Qt@Keychain)
 find_dependency(Olm)
